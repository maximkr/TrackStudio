<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.trackstudio.model.Mstatus" proxy="com.trackstudio.model.Mstatus" table="gr_mstatus">
        <cache usage="nonstrict-read-write"/>

        <id column="mstatus_id" name="id" type="java.lang.String" unsaved-value="null">
            <generator class="uuid.hex"/>
        </id>
        <property column="mstatus_name" not-null="true" name="name" type="java.lang.String"/>
        <property column="mstatus_description" name="description" type="java.lang.String"/>
        <property column="mstatus_action" name="action" type="java.lang.String"/>
        <property column="mstatus_preferences" name="preferences" type="java.lang.String"/>


        <many-to-one name="workflow" column="mstatus_workflow" class="com.trackstudio.model.Workflow" cascade="none"/>
        <many-to-one name="trigger" column="mstatus_trigger" class="com.trackstudio.model.Trigger" cascade="all"/>

        <set name="resolutionSet" lazy="true" inverse="true" cascade="all">
            <key column="resolution_mstatus"/>
            <one-to-many class="com.trackstudio.model.Resolution"/>
        </set>
        <set name="transitionSet" lazy="true" inverse="true" cascade="all">
            <key column="transition_mstatus"/>
            <one-to-many class="com.trackstudio.model.Transition"/>
        </set>
        <set name="mprstatusSet" lazy="true" inverse="true" cascade="all">
            <key column="mprstatus_mstatus"/>
            <one-to-many class="com.trackstudio.model.Mprstatus"/>
        </set>

        <!-- non cascade assotiations -->
        <set name="messageSet" lazy="true" inverse="true" cascade="save-update">
            <key column="message_mstatus"/>
            <one-to-many class="com.trackstudio.model.Message"/>
        </set>
        <set name="umstatusSet" lazy="true" inverse="true" cascade="all">
            <key column="umstatus_mstatus"/>
            <one-to-many class="com.trackstudio.model.Umstatus"/>
        </set>
        <set name="mailImportSet" lazy="true" inverse="true" cascade="save-update">
            <key column="mailimport_mstatus"/>
            <one-to-many class="com.trackstudio.model.MailImport"/>
        </set>
    </class>
</hibernate-mapping>
