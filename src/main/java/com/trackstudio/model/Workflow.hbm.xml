<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.trackstudio.model.Workflow" proxy="com.trackstudio.model.Workflow" table="gr_workflow">
        <cache usage="nonstrict-read-write"/>

        <id column="workflow_id" name="id" type="java.lang.String" unsaved-value="null">
            <generator class="uuid.hex"/>
        </id>
        <property column="workflow_name" not-null="true" name="name" type="java.lang.String"/>

        <many-to-one name="task" column="workflow_task" class="com.trackstudio.model.Task" cascade="none"/>

        <set name="mstatusSet" lazy="true" inverse="true" cascade="all">
            <key column="mstatus_workflow"/>
            <one-to-many class="com.trackstudio.model.Mstatus"/>
        </set>
        <set name="statusSet" lazy="true" inverse="true" cascade="all">
            <key column="status_workflow"/>
            <one-to-many class="com.trackstudio.model.Status"/>
        </set>
        <set name="categorySet" lazy="true" inverse="true" cascade="save-update">
            <key column="category_workflow"/>
            <one-to-many class="com.trackstudio.model.Category"/>
        </set>
        <set name="prioritySet" lazy="true" inverse="true" cascade="all">
            <key column="priority_workflow"/>
            <one-to-many class="com.trackstudio.model.Priority"/>
        </set>
        <set name="udfsourceSet" lazy="true" inverse="true" cascade="all">
            <key column="udfsource_workflow"/>
            <one-to-many class="com.trackstudio.model.Udfsource"/>
        </set>

    </class>
</hibernate-mapping>
