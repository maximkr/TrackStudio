<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.trackstudio.model.Usersource" proxy="com.trackstudio.model.Usersource" table="gr_usersource">
        <cache usage="nonstrict-read-write"/>

        <id column="usersource_id" name="id" type="java.lang.String" unsaved-value="null">
            <generator class="uuid.hex"/>
        </id>

        <many-to-one name="user" column="usersource_user" class="com.trackstudio.model.User" cascade="none"/>
        <many-to-one name="prstatus" column="usersource_prstatus" class="com.trackstudio.model.Prstatus"
                     cascade="none"/>

        <set name="taskSet" lazy="true" inverse="true" cascade="save-update">
            <key column="task_handler"/>
            <one-to-many class="com.trackstudio.model.Task"/>
        </set>

        <set name="messageSet" lazy="true" inverse="true" cascade="all">
            <key column="message_handler"/>
            <one-to-many class="com.trackstudio.model.Message"/>
        </set>

        <set name="aclSet" lazy="true" inverse="true" cascade="all">
            <key column="acl_usersource"/>
            <one-to-many class="com.trackstudio.model.Acl"/>
        </set>

        <set name="subscriptionSet" lazy="true" inverse="true" cascade="all">
            <key column="subscription_user"/>
            <one-to-many class="com.trackstudio.model.Subscription"/>
        </set>
        <set name="notificationSet" lazy="true" inverse="true" cascade="all">
            <key column="notification_user"/>
            <one-to-many class="com.trackstudio.model.Notification"/>
        </set>

    </class>
</hibernate-mapping>
