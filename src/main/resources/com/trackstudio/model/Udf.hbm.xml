<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.trackstudio.model.Udf" proxy="com.trackstudio.model.Udf" table="gr_udf">
        <cache usage="nonstrict-read-write"/>

        <id column="udf_id" name="id" type="java.lang.String" unsaved-value="null">
            <generator class="uuid.hex"/>
        </id>
        <property column="udf_caption" name="caption" type="java.lang.String"/>
        <property column="udf_referencedbycaption" name="referencedbycaption" type="java.lang.String"/>
        <property column="udf_order" name="order" type="java.lang.Integer"/>
        <property column="udf_def" name="def" type="java.lang.String"/>
        <property column="udf_required" name="required" type="java.lang.Integer"/>
        <property column="udf_htmlview" name="htmlview" type="java.lang.Integer"/>
        <property column="udf_lookuponly" name="lookuponly" type="java.lang.Integer"/>
        <property column="udf_cachevalues" name="cachevalues" type="java.lang.Integer"/>
        <property column="udf_type" name="type" type="java.lang.Integer"/>
        <property column="udf_script" name="script" type="java.lang.String"/>
        <property column="udf_lookupscript" name="lookupscript" type="java.lang.String"/>

        <many-to-one name="udfsource" column="udf_udfsource" class="com.trackstudio.model.Udfsource" cascade="none"/>
        <many-to-one name="initialtask" column="udf_initialtask" class="com.trackstudio.model.Task" cascade="none"/>
        <many-to-one name="initialuser" column="udf_initialuser" class="com.trackstudio.model.User" cascade="none"/>

        <set name="udflistSet" lazy="true" inverse="true" cascade="all">
            <key column="udflist_udf"/>
            <one-to-many class="com.trackstudio.model.Udflist"/>
        </set>
        <set name="udfvalSet" lazy="true" inverse="true" cascade="all">
            <key column="udfval_udf"/>
            <one-to-many class="com.trackstudio.model.Udfval"/>
        </set>
        <set name="uprstatusSet" lazy="true" inverse="true" cascade="all">
            <key column="uprstatus_udf"/>
            <one-to-many class="com.trackstudio.model.Uprstatus"/>
        </set>

        <set name="umstatusSet" lazy="true" inverse="true" cascade="all">
            <key column="umstatus_udf"/>
            <one-to-many class="com.trackstudio.model.Umstatus"/>
        </set>
    </class>
</hibernate-mapping>
