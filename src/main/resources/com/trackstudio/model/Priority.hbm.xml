<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.trackstudio.model.Priority" proxy="com.trackstudio.model.Priority" table="gr_priority">
        <cache usage="nonstrict-read-write"/>

        <id column="priority_id" name="id" type="java.lang.String" unsaved-value="null">
            <generator class="uuid.hex"/>
        </id>
        <property column="priority_name" not-null="true" name="name" type="java.lang.String"/>
        <property column="priority_description" not-null="false" name="description" type="java.lang.String"/>
        <property column="priority_order" not-null="true" name="order" type="java.lang.Integer"/>
        <property column="priority_def" not-null="false" name="def" type="java.lang.Integer"/>

        <many-to-one name="workflow" column="priority_workflow" class="com.trackstudio.model.Workflow" cascade="none"/>

        <set name="taskSet" lazy="true" inverse="true" cascade="save-update">
            <key column="task_priority"/>
            <one-to-many class="com.trackstudio.model.Task"/>
        </set>

        <set name="messageSet" lazy="true" inverse="true" cascade="save-update">
            <key column="message_priority"/>
            <one-to-many class="com.trackstudio.model.Message"/>
        </set>

    </class>
</hibernate-mapping>
