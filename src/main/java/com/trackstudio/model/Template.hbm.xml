<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.trackstudio.model.Template" proxy="com.trackstudio.model.Template" table="gr_template">

        <id column="template_id" name="id" type="java.lang.String" unsaved-value="null">
            <generator class="uuid.hex"/>
        </id>

        <property column="template_name" name="name" not-null="true" type="java.lang.String"/>
        <property column="template_description" name="description" type="java.lang.String"/>
        <property column="template_folder" name="folder" type="java.lang.String"/>
        <property column="template_active" name="active" type="java.lang.Integer"/>


        <many-to-one name="task" column="template_task" class="com.trackstudio.model.Task" cascade="none"/>
        <many-to-one name="owner" column="template_owner" class="com.trackstudio.model.User" cascade="none"/>
        <many-to-one name="user" column="template_user" class="com.trackstudio.model.User" cascade="none"/>

    </class>
</hibernate-mapping>
