<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.trackstudio.model.Status" proxy="com.trackstudio.model.Status" table="gr_status">
        <cache usage="nonstrict-read-write"/>

        <id column="status_id" name="id" type="java.lang.String" unsaved-value="null">
            <generator class="uuid.hex"/>
        </id>
        <property column="status_name" not-null="true" name="name" type="java.lang.String"/>
        <property column="status_isstart" name="isstart" type="java.lang.Integer"/>
        <property column="status_isfinish" name="isfinish" type="java.lang.Integer"/>
        <property column="status_color" name="color" type="java.lang.String"/>

        <many-to-one name="workflow" column="status_workflow" class="com.trackstudio.model.Workflow" cascade="none"/>

        <!-- cascade assotiations -->
        <set name="transitionStartSet" lazy="true" inverse="true" cascade="all">
            <key column="transition_start"/>
            <one-to-many class="com.trackstudio.model.Transition"/>
        </set>
        <set name="transitionFinishSet" lazy="true" inverse="true" cascade="all">
            <key column="transition_finish"/>
            <one-to-many class="com.trackstudio.model.Transition"/>
        </set>

        <set name="taskSet" lazy="true" inverse="true" cascade="save-update">
            <key column="task_status"/>
            <one-to-many class="com.trackstudio.model.Task"/>
        </set>

    </class>
</hibernate-mapping>
