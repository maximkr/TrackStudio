<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.trackstudio.model.Transition" proxy="com.trackstudio.model.Transition" table="gr_transition">
        <cache usage="nonstrict-read-write"/>

        <id column="transition_id" name="id" type="java.lang.String" unsaved-value="null">
            <generator class="uuid.hex"/>
        </id>

        <many-to-one name="start" column="transition_start" class="com.trackstudio.model.Status" cascade="none"/>
        <many-to-one name="finish" column="transition_finish" class="com.trackstudio.model.Status" cascade="none"/>
        <many-to-one name="mstatus" column="transition_mstatus" class="com.trackstudio.model.Mstatus" cascade="none"/>
    </class>
</hibernate-mapping>
